{
  "name": "simple_shop_server",
  "version": "0.0.1",
  "description": "Simple Shop with Server Implementation",
  "main": "server/index.ts",
  "scripts": {
    "copy": "cpx 'server/**/*.{pug,html,png}' dist",
    "start": "tsc & nodemon dist/server/server.ts",
    "tsc": "tsc"
  },
  "directories": {
    "client": "client",
    "server": "server"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  },
  "keywords": [
    "react",
    "express",
    "typescript",
    "jest",
    "node-ts"
  ],
  "author": "Jack Harrison",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackBeNimbleBeQuick/simple_server_shop.git"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "@types/socket.io": "^1.4.36",
    "body-parser": "^1.18.3",
    "connect-mongo": "^2.0.1",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "helmet": "^3.12.1",
    "mongoose": "^5.1.6",
    "node-ts": "^2.1.2",
    "nodemon": "^1.17.5",
    "pug": "^2.0.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "request": "^2.87.0",
    "request-promise-core": "^1.1.1",
    "sass-loader": "^7.0.3",
    "socket.io": "^2.1.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "webpack": "^4.14.0",
    "workbox-webpack-plugin": "^3.3.1",
    "ws": "^5.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.1",
    "cpx": "^1.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.1.0",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^22.4.6"
  }
}
