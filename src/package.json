{
  "description": "Simple Shop with Server Implementation",
  "main": "server/index.ts",
  "scripts": {
    "start": "ts-node server/server.ts",
    "inspect": "node --inspect -r ts-node/register server/server.ts",
    "preinstall": "npm install --unsafe-perm -g ts-node ts-node-dev node-sass cpx webpack webpack-cli",
    "build_db": "ts-node build_local_db_image_support.ts",
    "sw": "ts-node create_cache.ts &",
    "css_main": "node-sass ./bin/main/sass/main.scss -o server/public/css",
    "css": "node-sass ./bin/shop/sass/main.scss -o server/clients/shop/css",
    "clean": "killall node node-sass",
    "production": "webpack &",
    "build": "webpack --env dev -w && ts-node-dev --respawn server/server.ts",
    "server_dev": "ts-node-dev --respawn server/server.ts &",
    "launch": "open -a Google\\ Chrome\\ Canary https://localhost:6040/shop --args --disable-web-security -user-data-dir --ignore-certificate-errors --unsafely-treat-insecure-origin-as-secure=https://localhost:6040",
    "shop_css": "node-sass bin/shop/sass/main.scss -o server/clients/shop/css"
  },
  "directories": {
    "lib": "clients/lib/",
    "client": "clients",
    "server": "server"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  },
  "keywords": [
    "react",
    "express",
    "typescript",
    "jest",
    "node-ts"
  ],
  "author": "Jack Harrison",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackBeNimbleBeQuick/simple_server_shop.git"
  },
  "dependencies": {
    "@types/connect-mongo": "0.0.37",
    "@types/cookie-parser": "^1.4.1",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "0.0.38",
    "@types/pug": "^2.0.4",
    "@types/react-redux": "^6.0.6",
    "@types/serve-favicon": "^2.2.30",
    "@types/socket.io": "^1.4.37",
    "@types/socket.io-client": "^1.4.32",
    "@types/validator": "^9.4.1",
    "@types/webappsec-credential-management": "^0.3.5",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "dompurify": "^2.0.17",
    "express": "^4.17.3",
    "express-session": "^1.15.6",
    "flux": "^3.1.3",
    "fs": "0.0.1-security",
    "helmet": "^3.13.0",
    "html-react-parser": "^0.4.6",
    "html-to-text": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^5.7.5",
