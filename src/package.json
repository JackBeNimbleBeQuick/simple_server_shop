{
  "description": "Simple Shop with Server Implementation",
  "main": "server/index.ts",
  "scripts": {
    "css": "node-sass ./bin/shop/sass/main.scss -o server/public/clients/shop/css -w&",
    "clean": "killall node node-sass",
    "build": "webpack -w && ts-node-dev --respawn server/server.ts",
    "server_dev": "ts-node-dev --respawn server/server.ts &",
    "launch": "open -a Google\\ Chrome\\ Canary https://localhost:6040 --args --disable-web-security -user-data-dir --ignore-certificate-errors --unsafely-treat-insecure-origin-as-secure=https://localhost:6040",
    "shop_css": "node-sass bin/shop/sass/main.scss -o server/clients/shop/css"
  },
  "directories": {
    "lib": "clients/lib/",
    "client": "clients",
    "server": "server"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  },
  "keywords": [
    "react",
    "express",
    "typescript",
    "jest",
    "node-ts"
  ],
  "author": "Jack Harrison",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackBeNimbleBeQuick/simple_server_shop.git"
  },
  "dependencies": {
    "@types/connect-mongo": "0.0.37",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "0.0.38",
    "@types/pug": "^2.0.4",
    "@types/react-redux": "^6.0.4",
    "@types/socket.io": "^1.4.36",
    "@types/webappsec-credential-management": "^0.3.3",
    "body-parser": "^1.18.3",
    "connect-mongo": "^2.0.1",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "flux": "^3.1.3",
    "helmet": "^3.12.1",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.4",
    "node-ts": "^2.1.2",
    "pug": "^2.0.3",
    "react-redux": "^5.0.7",
    "request-promise-core": "^1.1.1",
    "rx": "^4.1.0",
    "socket.io": "^2.1.1",
    "ts-node": "^7.0.0",
    "typesafe-actions": "^2.0.4",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.3",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/request": "^2.47.1",
    "concurrently": "^3.6.0",
    "cpx": "^1.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "immutable": "^3.8.2",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "request": "^2.87.0",
    "sass-loader": "^7.0.3",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "ts-node-dev": "^1.0.0-pre.26",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0"
  }
}
