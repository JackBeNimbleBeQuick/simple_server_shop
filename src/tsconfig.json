{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outDir": "dist",
    "jsx": "react",
    "watch": false,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "",
    "paths":{
      "clients/*": ["clients/*"],
      "server/*": ["server/*"]
    },
  },
  "files" : [
    "clients/shop/main.tsx",
    "server/server.ts",
  ],
  "filesGlob":[
    "**/*.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "lib":[
    "es6",
    "dom",
    "dom.iterable"
  ],
  "exclude":[
    "./node_modules"
  ],
  "include" : [
    "clients/**/*",
    "server/**/*",
  ]
}
